        "margin_per_contract": 15000.0,
        "commission": 5.0,
        "multiplier": 1.0
      },
      "NQ=F": {
        "name": "Nasdaq Futures", 
        "asset_type": "futures",
        "tick_value": 5.0,
        "margin_per_contract": 15000.0,
        "commission": 5.0,
        "multiplier": 1.0
      },
      "CL=F": {
        "name": "Crude Oil Futures",
        "asset_type": "futures", 
        "tick_value": 10.0,
        "margin_per_contract": 8002.0,
        "commission": 5.0,
        "multiplier": 1.0
      },
      "BTC-USD": {
        "name": "Bitcoin",
        "asset_type": "crypto",
        "tick_value": 1.0,
