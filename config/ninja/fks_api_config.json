  },
  "ninjatrader": {
    "metrics_buffer_size": 1000,
    "log_retention_days": 30,
    "connection_timeout": 30
  },
  "websocket": {
    "max_connections": 100,
    "heartbeat_interval": 30,
    "message_queue_size": 1000
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
